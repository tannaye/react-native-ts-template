{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": ["esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@assets": ["assets"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
